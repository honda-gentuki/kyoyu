<% breadcrumb :user_new %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main',local: true do |f| %>

  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        新規登録
      </h1>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <p class='form-info-header'>
        基本情報
      </p>
      <p class='form-info-text'>
        メールアドレス・パスワードは毎ログイン時に使用します。
      </p>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) 国語太郎", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"user_email", placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email"%>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"user_password", placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"user_password_confirmation", placeholder:"同じパスワードを入力して下さい", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <p class='form-info-header'>
        本人確認
      </p>
      <p class='form-info-text'>
        安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
      </p>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前(全角)</label>
          <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :last_name, class:"input-name", id:"user_last_name", placeholder:"例) 山田" %>
        <%= f.text_area :first_name, class:"input-name", id:"user_first_name", placeholder:"例) 太郎" %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前カナ(全角)</label>
        <span class="indispensable">必須</span>
      </div> 
      <div class='input-name-wrap'>
        <%= f.text_area :last_name_kana, class:"input-name", id:"user_last_name_kana", placeholder:"例) ヤマダ" %>
        <%= f.text_area :first_name_kana, class:"input-name", id:"user_first_name_kana", placeholder:"例) タロウ" %>
      </div>
    </div> 

    <div class="form-group">
      <p class='form-info-header'>
        プロフィール情報
      </p>
      <p class='form-info-text'>
        以下は公開される任意情報です。
      </p>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">年齢</label>
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_area :age, class:"input-default", id:"user_age", placeholder:"例) 30or30代", maxlength:"20" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">学校</label>
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_area :school, class:"input-default", id:"user_school", placeholder:"例)〇〇学校", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">担当教科</label>
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_area :subject, class:"input-default", id:"user_subject", placeholder:"例)国語", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">部活動</label>
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_area :subject, class:"input-default", id:"user_club", placeholder:"例)〇〇部", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">一言</label>
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_area :a_word, class:"input-default", id:"user_a_word", maxlength:"40" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: :form__btn %>
    </div>
  </div>
<% end %>
