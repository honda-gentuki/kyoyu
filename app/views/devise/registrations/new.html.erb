<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
         <%= f.label :password, "パスワード（6文字以上）" %><br />
         <%= f.password_field :password, id:"user_password", autocomplete: "new-password"%>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"user_nickname" %>
        </div>

        <div class="field">
          <%= f.label :last_name, "姓" %><br />
          <%= f.text_field :last_name, id:"user_first_name" %>
        </div>

        <div class="field">
          <%= f.label :first_name, "名" %><br />
          <%= f.text_field :first_name, id:"user_first_name" %>
        </div>

        <div class="field">
          <%= f.label :last_name_kana, "セイ" %><br />
          <%= f.text_field :last_name_kana, id:"user_last_name_kana" %>
        </div>

         <div class="field">
          <%= f.label :first_name_kana, "メイ" %><br />
          <%= f.text_field :first_name_kana, id:"user_first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :age, "年齢" %><br />
          <%= f.text_field :age, id:"user_age" %>
        </div>

        <div class="field">
          <%= f.label :school, "学校名" %><br />
          <%= f.text_field :school, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :subject, "担当教科" %><br />
          <%= f.text_field :subject, id:"user_subject" %>
        </div>

        <div class="field">
          <%= f.label :club, "担当部活" %><br />
          <%= f.text_field :club, id:"user_club" %>
        </div>

        <div class="field">
          <%= f.label :a_word, "一言" %><br />
          <%= f.text_area :a_word, class: :form__text, id:"user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>