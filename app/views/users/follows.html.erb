<% breadcrumb :follows_user, @user %>
<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post card w-100">
        <%= link_to user_path(user) do %>
        <p class="caption h4"><%= user.nickname %></p>
        <div class="d-flex">
          <h4 class="ml-5"><%= user.age %></h4>
        </div>
        <p class="caption"><%= "#{user.posts.count} 投稿" %></p>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @users %>
  </div>
</div>