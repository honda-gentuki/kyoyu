<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}先生の情報"%>
      </h2>
      <div class="post__manage">
        <p class="d-flex justify-content-end">
          <% if user_signed_in? && @user == current_user %>
            <%= link_to "プロフィール編集", edit_user_registration_path(@user), class: "btn-sm btn-success" %>
          <% end %>
          <% if current_user != @user %>
            <% if current_user.following?(@user) %>
              <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn-sm btn-danger" %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class:"btn-sm btn-success" %>
            <% end %>
          <% end %>
        </p>
        <div class="ml-3 mb-3 card w-100">
          <div class="d-flex">
            <h4 class="ml-5 m-3"><%= @user.nickname %></h4>
          </div>
          <div class="d-flex">
            <%= link_to follows_user_path(@user) do %>
              <h6>フォロー<%= @following_users.count %></h6>
            <% end %>&nbsp;&nbsp;
            <%= link_to followers_user_path(@user) do %>
              <h6>フォロワー<%= @follower_users.count %></h6>
            <% end %>
          </div>
        </div>
      </div>
      <div class=" row justify-content-center">
      </div>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">ニックネーム</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">年齢</th>
            <td class="table__col2"><%= @user.age %></td>
          </tr>
          <tr>
            <th class="table__col1">学校名</th>
            <td class="table__col2"><%= @user.school %></td>
          </tr>
          <tr>
            <th class="table__col1">担当教科</th>
            <td class="table__col2"><%= @user.subject %></td>
          </tr>
          <tr>
            <th class="table__col1">部活動</th>
            <td class="table__col2"><%= @user.club %></td>
          </tr>
          <tr>
            <th class="table__col1">一言</th>
            <td class="table__col2"><%= @user.a_word %></td>
          </tr>
        </tbody>
      </table>
      <div class="post__manage">
        <%= link_to "チャット", chat_path, class: :post__btn%>
      </div>
      <% if user_signed_in? && current_user.id == @user.id %>
        <div class="post__manage">
          <%= link_to "編集する", edit_user_registration_path, class: :post__btn%>
          <%= link_to '退会', user_registration_path, class: :post__btn, method: :delete, data: { confirm: "アカウントを削除してもよろしいですか？" } %>
        </div>
      <% end %>
      <h2 class="page-heading">
        <%= "#{@user.nickname}先生の投稿"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'posts/post', collection: @user.posts %>
      </div>
    </div>
  </div>
</div>