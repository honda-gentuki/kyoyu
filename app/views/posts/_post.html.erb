<div class="card">
  <div class="card__body">
    <%= link_to post.unit, post_path(post.id), class: :card__title%>
    <p class="card__summary">
      <%= post.course %>
    </p>
    <%= link_to image_tag(post.image.variant(resize: '300x300'), class: :card__img ), post_path(post.id) if post.image.attached?%>
    <div id="like-btn-<%= post.id %>">
      <%= render 'likes/like', post: post %>
    </div>
    <i class="bi bi-chat-dots"></i>
    <%= link_to "by#{post.user.nickname}先生", user_path(post.user.id), class: :card__user %>
  </div>
</div>\