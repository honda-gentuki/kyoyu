<main class="main">
  <div class="inner">
    <div class="post__wrapper">
      <p class="post__hedding">
        <%= @post.unit %>
      </p>
      <%= link_to "by #{@post.user.nickname}", user_path(current_user), class: :post__user %>
      <% if @post.image.present? %>
      <div class="post__image">
        <%= image_tag @post.image.variant(resize: '500x500') %>
      </div>
      <% end %>
      <div class="post__body">
        <div class="post__detail">
          <p class="detail__title">教科名</p>
          <p class="detail__message">
            <%= @post.subject %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">科目名</p>
          <p class="detail__message">
            <%= @post.course %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">単元名</p>
          <p class="detail__message">
            <%= @post.unit %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">教材名</p>
          <p class="detail__message">
            <%= @post.teaching_materials %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">導入</p>
          <p class="detail__message">
            <%= @post.introduction %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">導入の時間</p>
          <p class="detail__message">
            <%= @post.introduction_time %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">展開</p>
          <p class="detail__message">
            <%= @post.development %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">展開の時間</p>
          <p class="detail__message">
            <%= @post.development_time %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">まとめ</p>
          <p class="detail__message">
            <%= @post.summary %>
          </p>
        </div>
        <div class="post__detail">
          <p class="detail__title">まとめの時間</p>
          <p class="detail__message">
            <%= @post.summary_time %>
          </p>
        </div>
       <% if user_signed_in? && current_user.id == @post.user_id %>
        <div class="post__manage">
          <%= link_to "編集する", edit_post_path, class: :post__btn%>
          <%= link_to "削除する", post_path, class: :post__btn, method: :delete %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</main>
